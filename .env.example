# TraderTony V4 Environment Variables Example
# Copy this file to .env and fill in your actual values.
# DO NOT commit your actual .env file to version control.

# =============================================================================
# SOLANA CONFIGURATION
# =============================================================================

# Use a reliable RPC provider (e.g., Helius, QuickNode, Triton, Chainstack)
# Mainnet Example:
# SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
# Testnet Example:
SOLANA_RPC_URL=https://api.testnet.solana.com

# WebSocket URL (optional - derived from RPC URL if not provided)
# SOLANA_WS_URL=wss://mainnet.helius-rpc.com/?api-key=YOUR_KEY

# Network: mainnet or testnet
NETWORK=mainnet

# !!! IMPORTANT: Use a dedicated burner wallet, NOT your main wallet !!!
# Export the private key from your wallet (e.g., Phantom, Solflare) as Base58 string
WALLET_PRIVATE_KEY=YOUR_WALLET_PRIVATE_KEY_BASE58

# =============================================================================
# API KEYS
# =============================================================================

# Helius API Key (https://helius.xyz/) - Required for token discovery/analysis
HELIUS_API_KEY=YOUR_HELIUS_API_KEY

# Birdeye API Key (https://birdeye.so/) - Required for price data
BIRDEYE_API_KEY=YOUR_BIRDEYE_API_KEY

# Jupiter API Key (optional - for priority access)
# JUPITER_API_KEY=YOUR_JUPITER_API_KEY

# =============================================================================
# WEB API CONFIGURATION
# =============================================================================

# Host to bind the API server (default: 0.0.0.0)
API_HOST=0.0.0.0

# Port for the API server (default: 3000)
# Note: Railway uses PORT environment variable automatically
API_PORT=3000

# CORS allowed origins (comma-separated)
# Use * for development, specific domains for production
# Example: https://your-frontend.vercel.app,https://your-domain.com
CORS_ORIGINS=*

# Auto-start trading when server starts (default: false)
AUTO_START_TRADING=false

# =============================================================================
# COPY TRADE CONFIGURATION
# =============================================================================

# Treasury wallet address for collecting copy trade fees
# TREASURY_WALLET=YOUR_TREASURY_WALLET_ADDRESS

# Fee percentage on profitable copy trades (default: 10.0)
COPY_TRADE_FEE_PERCENT=10.0

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Set to 'false' to enable real trading. USE WITH EXTREME CAUTION.
DEMO_MODE=true

# Default transaction parameters (can be overridden by strategy settings)
# Slippage tolerance in basis points (100 = 1%)
DEFAULT_SLIPPAGE_BPS=100

# Priority fee in micro-lamports (adjust based on network congestion)
DEFAULT_PRIORITY_FEE_MICRO_LAMPORTS=50000

# =============================================================================
# DEFAULT STRATEGY PARAMETERS
# =============================================================================
# These are used as defaults when creating strategies via API

# Maximum SOL per position
MAX_POSITION_SIZE_SOL=0.05

# Total trading budget in SOL
TOTAL_BUDGET_SOL=0.2

# Stop loss percentage (e.g., 15 = sell if price drops 15%)
DEFAULT_STOP_LOSS_PERCENT=15

# Take profit percentage (e.g., 50 = sell if price rises 50%)
DEFAULT_TAKE_PROFIT_PERCENT=50

# Trailing stop percentage
DEFAULT_TRAILING_STOP_PERCENT=5

# Maximum time to hold a position in minutes
MAX_HOLD_TIME_MINUTES=240

# =============================================================================
# RISK PARAMETERS
# =============================================================================

# Minimum liquidity in SOL for a token to be considered
MIN_LIQUIDITY_SOL=10

# Maximum risk level (0-100) - higher = more risky tokens allowed
MAX_RISK_LEVEL=60

# Minimum number of token holders
MIN_HOLDERS=50
